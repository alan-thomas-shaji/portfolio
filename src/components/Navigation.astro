---
/**
 * Navigation Component - Workshop Toggle Switches
 * 
 * Navigation links styled as physical toggle switches or wired-in buttons
 * with a workshop aesthetic.
 * - Hides when at top of page, shows on scroll
 * - Mobile: Plus icon menu with cyberpunk HUD side drawer
 */

interface Props {
  currentSection?: string;
}

const { currentSection = '' } = Astro.props;

const navItems = [
  { id: 'hero', label: 'About', href: '#hero' },
  { id: 'experience', label: 'Experience', href: '#experience' },
  { id: 'projects', label: 'Projects', href: '#projects' },
  { id: 'contact', label: 'Contact', href: '#contact' },
];
---

<nav id="main-nav" class="nav-bar nav-hero fixed top-0 left-0 right-0 z-50 bg-[#1a1612]/95 backdrop-blur-sm transition-all duration-300">
  <div class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <a href="#hero" class="nav-brand font-bold text-xl transition-colors">
        <span class="font-mono">[ALAN THOMAS SHAJI]</span>
      </a>
      
      {/* Desktop Navigation */}
      <div class="desktop-nav flex gap-4 items-center">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`nav-toggle ${currentSection === item.id ? 'active' : ''}`}
            data-section={item.id}
          >
            <span class="toggle-label">{item.label}</span>
            <div class="toggle-switch">
              <div class="toggle-indicator"></div>
            </div>
          </a>
        ))}
      </div>

      {/* Mobile Plus Button */}
      <button 
        id="mobile-menu-toggle" 
        class="mobile-menu-btn"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <div class="plus-icon">
          <span class="plus-line-h"></span>
          <span class="plus-line-v"></span>
        </div>
      </button>
    </div>
  </div>
</nav>

{/* Mobile Side Menu - Cyberpunk HUD */}
<div id="mobile-menu" class="mobile-menu">
  <div class="mobile-menu-overlay"></div>
  <div class="mobile-menu-drawer">
    <div class="mobile-menu-header">
      <div class="hud-title-wrapper">
        <span class="mobile-menu-title">NAVIGATION</span>
        <div class="hud-underline"></div>
      </div>
      <button 
        id="mobile-menu-close" 
        class="mobile-menu-close"
        aria-label="Close menu"
      >
        <div class="x-icon">
          <span class="x-line-1"></span>
          <span class="x-line-2"></span>
        </div>
      </button>
    </div>
    <div class="mobile-menu-content">
      {navItems.map((item) => (
        <a
          href={item.href}
          class={`mobile-nav-item ${currentSection === item.id ? 'active' : ''}`}
          data-section={item.id}
        >
          <div class="target-icon">
            <div class="target-outer"></div>
            <div class="target-inner"></div>
          </div>
          <span class="mobile-nav-label">{item.label}</span>
        </a>
      ))}
    </div>
  </div>
</div>

