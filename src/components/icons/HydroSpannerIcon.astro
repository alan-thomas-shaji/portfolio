---
/**
 * HydroSpannerIcon - The Hydro-Spanner (Workshop Tool)
 * 
 * The ultimate Star Wars mechanic's tool. Perfect for a "Skills" or "Toolbox" section.
 * 
 * @example
 * <HydroSpannerIcon class="w-6 h-6 text-yellow-500" />
 */

interface Props {
  class?: string;
  width?: number | string;
  height?: number | string;
  [key: string]: any;
}

const {
  class: className = "",
  width = 24,
  height = 24,
  ...rest
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  width={width}
  height={height}
  fill="none"
  stroke="currentColor"
  stroke-width="1.5"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  {...rest}
>
  {/* Handle */}
  <path d="M15.5 4.5l-9 9a2.121 2.121 0 0 0 3 3l9-9" />
  {/* Head 1 */}
  <path d="M4.5 10.5l-2-2a2 2 0 1 1 3-3l2 2" />
  {/* Head 2 (Adjustable side) */}
  <path d="M19.5 10.5l-1.5-1.5" />
  <path d="M16 14l3.5 3.5c1.5 1.5 3 0 3 0s-1.5-1.5 0-3l-3.5-3.5" />
  {/* Knobs/Greeblies */}
  <circle cx="12" cy="12" r="1" fill="currentColor" stroke="none" />
  <rect
    x="8"
    y="15"
    width="2"
    height="3"
    transform="rotate(-45 8 15)"
    fill="currentColor"
    stroke="none"
  />
</svg>

