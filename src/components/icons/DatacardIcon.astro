---
/**
 * DatacardIcon - The Datacard (Storage/Projects)
 * 
 * Represents data, plans, or code. Great for a "Projects" or "Resume" download button.
 * 
 * @example
 * <DatacardIcon class="w-6 h-6 text-cyan-400" />
 */

interface Props {
  class?: string;
  width?: number | string;
  height?: number | string;
  [key: string]: any;
}

const {
  class: className = "",
  width = 24,
  height = 24,
  ...rest
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  width={width}
  height={height}
  class={className}
  {...rest}
>
  {/* Card Outline with chipped corner */}
  <path
    fill="none"
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="1.5"
    d="M19 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-3z"
  />
  {/* Circuit lines */}
  <path
    fill="none"
    stroke="currentColor"
    stroke-linecap="round"
    stroke-width="1.5"
    d="M16 21v-7a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v7"
  />
  <line
    x1="7"
    y1="7"
    x2="12"
    y2="7"
    stroke="currentColor"
    stroke-width="1.5"
    stroke-linecap="round"
  />
  <line
    x1="7"
    y1="10"
    x2="10"
    y2="10"
    stroke="currentColor"
    stroke-width="1.5"
    stroke-linecap="round"
  />
  {/* Chip contact */}
  <rect x="13" y="16" width="4" height="3" fill="currentColor" stroke="none" />
</svg>

