---
/**
 * Main Layout - The Scavenger's Path Portfolio
 * 
 * Base layout with global styles and meta tags
 */

import LoadingScreen from '../components/LoadingScreen.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "The Scavenger's Path - Senior Software Engineer Portfolio",
  description = "A Star Wars-themed portfolio showcasing frontend development expertise through the lens of a scavenger's workshop and Jedi evolution.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <LoadingScreen />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --imperial-red: #8b0000;
    --jedi-blue: #4a9eff;
    --scrap-grey: #3a3a3a;
    --workshop-orange: #ff6b35;
    --kyber-crystal: #00ffff;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu,
      Cantarell, 'Helvetica Neue', sans-serif;
    background: #1a1612;
    color: #fff;
    line-height: 1.6;
    overflow-x: hidden;
  }

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: #1a1612;
  }

  ::-webkit-scrollbar-thumb {
    background: #8b4513;
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #ff8c00;
  }

  /* Selection */
  ::selection {
    background: rgba(255, 107, 53, 0.3);
    color: #fff;
  }

  /* Smooth transitions */
  a,
  button {
    transition: all 0.3s ease;
  }

  /* Container utility */
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Typography */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: 700;
    line-height: 1.2;
  }

  code,
  pre {
    font-family: 'JetBrains Mono', 'Courier New', monospace;
  }

  /* Animations */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes glow-pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  @keyframes flicker {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }
</style>
